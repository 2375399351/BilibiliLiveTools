@section Scripts {
    <script>
        layui.config({
            base: '@Url.Content("~/layuiadmin/")'
        }).use(['form', 'layer', 'jquery'], function () {
            $ = layui.jquery;
            var layer = layui.layer,
                form = layui.form;

        });

        function update() {
            $.ajax({
                type: "get",
                url: "@Url.Action("GetLogs", "Log")",
                cache: false,
                dataType: 'json', // 返回对象
                success: function (data) {
                    if (!data) {
                        console.log("返回参数为空！");
                    }
                    console.log(data.data);
                },
                error: function (data) {
                    console.log(data);
                }
            });
        }

        setInterval(update, 1000);
    </script>
