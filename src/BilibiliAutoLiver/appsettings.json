{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    //存放数据文件夹，{BaseDirectory}为通配符，表示应用程序根目录
    "DataDirectory": "{BaseDirectory}/data",
    //数据库配置，一般情况勿动
    "DbConnectionString": "Data Source={BaseDirectory}/data/db/app.db",
    //高级模式严格模式
    "AdvanceStrictMode": true,
    "AllowExtensions": [
      {
        "Type": "Video",
        "Values": [
          ".wmv",
          ".asf",
          ".asx",
          ".rm",
          ".rmvb",
          ".mp4",
          ".mov",
          ".m4v",
          ".avi",
          ".dat",
          ".mkv",
          ".flv"
        ]
      },
      {
        "Type": "Music",
        "Values": [
          ".wav",
          ".flac",
          ".ape",
          ".alac",
          ".mp3",
          ".aac"
        ]
      }
    ]
  }
}
