<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>disable</Nullable>
		<ImplicitUsings>disable</ImplicitUsings>
		<Version>4.1.1</Version>
		<Description>哔哩哔哩（B站）无人值守直播工具。</Description>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Models\Dtos\Common\**" />
	  <Content Remove="Models\Dtos\Common\**" />
	  <EmbeddedResource Remove="Models\Dtos\Common\**" />
	  <None Remove="Models\Dtos\Common\**" />
	</ItemGroup>

	<ItemGroup>
		<Content Remove="cookies.json" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="FFMpegCore" Version="5.1.0" />
		<PackageReference Include="FlashCap" Version="1.10.0" />
		<PackageReference Include="IdleBus" Version="1.5.3" />
		<PackageReference Include="MailKit" Version="4.6.0" />
		<PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="8.0.6" />
		<PackageReference Include="NLog.Web.AspNetCore" Version="5.3.11" />
		<PackageReference Include="Quartz.AspNetCore" Version="3.9.0" />
		<PackageReference Include="Quartz.Plugins" Version="3.9.0" />
		<PackageReference Include="Quartz.Plugins.TimeZoneConverter" Version="3.9.0" />
		<PackageReference Include="CliWrap" Version="3.6.6" />
		<PackageReference Include="FreeSql" Version="3.2.830" />
		<PackageReference Include="FreeSql.Repository" Version="3.2.830" />
		<PackageReference Include="FreeSql.Provider.SqliteCore" Version="3.2.830" />
		<PackageReference Include="SQLitePCLRaw.bundle_e_sqlite3" Version="2.1.8" />
	</ItemGroup>

	<PropertyGroup>
		<GenerateRuntimeConfigDevFile>true</GenerateRuntimeConfigDevFile>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\Bilibili.AspNetCore.Apis\Bilibili.AspNetCore.Apis.csproj" />
		<ProjectReference Include="..\BilibiliAutoLiver.Plugin.Base\BilibiliAutoLiver.Plugin.Base.csproj" />
	</ItemGroup>

	<PropertyGroup>
		<DebugType>embedded</DebugType>
	</PropertyGroup>

	<ItemGroup>
		<None Update="runtimes\linux-arm64\bin\ffmpeg">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="runtimes\linux-arm\bin\ffmpeg">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="runtimes\linux-x64\bin\ffmpeg">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="runtimes\win-x64\bin\ffmpeg.exe">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="if not exist &quot;$(TargetDir)Plugins\BilibiliAutoLiver.Plugin.YoloAI\&quot; mkdir &quot;$(TargetDir)Plugins\BilibiliAutoLiver.Plugin.YoloAI\&quot;&#xD;&#xA;xcopy /y /r &quot;$(SolutionDir)BilibiliAutoLiver.Plugin.YoloAI\bin\$(ConfigurationName)\$(TargetFramework)\*.*&quot; &quot;$(TargetDir)Plugins\BilibiliAutoLiver.Plugin.YoloAI\&quot;" />
	</Target>

</Project>
